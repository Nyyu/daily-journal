<%- include('partials/header'); %>

<h1><%= title %></h1>
<p><%= content.mainText %></p>
<div style="width: 95%; margin: auto">
    <% (content.array).forEach(element => { %>
        <h2><%= element.title %></h2>
        <div style="
            display: flex;
        ">
            <p style="
            max-width: 950px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            margin-right: 5px;
            "><%= element.text %>

            </p>

            <a href=<%=`/post/${element.title}`%> > 
                read more
            </a>
        </div>
    <% }); %>
</div>
